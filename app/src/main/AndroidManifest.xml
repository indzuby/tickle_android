<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.tickle">
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".view.common.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true">
        <activity android:name=".view.main.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
        <activity
            android:name=".view.start.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.change.myticket.UseTicketActivity"
            android:label="@string/useCoupon"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.change.myticket.ChangeTicketActivity"
            android:label="@string/changeCoupon"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.account.LoginActivity"
            android:label="@string/login"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.account.SignUpActivity"
            android:label="@string/signUp"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.account.SettingActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/setting"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".view.change.myticket.FindTicketActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:theme="@style/Translucent"></activity>
    </application>

</manifest>