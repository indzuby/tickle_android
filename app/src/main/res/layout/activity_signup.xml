<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grayBackground"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="25dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/tickle_border"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/gray66"
            android:layout_width="0dp"
            android:text="닉네임"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="2"
            android:hint="사용할 닉네임 입력"
            android:layout_width="0dp"
            android:textColor="@color/black33"
            android:textSize="12sp"
            android:inputType="text"
            android:textColorHint="@color/graybd"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/tickle_border"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/gray66"
            android:layout_width="0dp"
            android:text="이메일"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="2"
            android:hint="로그인에 사용할 메일주소"
            android:layout_width="0dp"
            android:textColor="@color/black33"
            android:textSize="12sp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/graybd"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/tickle_border"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/gray66"
            android:layout_width="0dp"
            android:text="비밀번호"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="2"
            android:hint="영문,숫자 조합 6-15자"
            android:layout_width="0dp"
            android:textColor="@color/black33"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:textColorHint="@color/graybd"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/tickle_border"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/gray66"
            android:layout_width="0dp"
            android:text="비밀번호 확인"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="2"
            android:hint="비밀번호 재입력"
            android:layout_width="0dp"
            android:textColor="@color/black33"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:textColorHint="@color/graybd"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:src="@mipmap/btn_join"
        android:layout_height="wrap_content" />
</LinearLayout>