<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="176dp">
    <include
        android:layout_alignParentBottom="true"
        android:layout_height="56dp"
        android:layout_width="match_parent"
        layout="@layout/element_main_header_button_small"/>

    <FrameLayout
        android:id="@+id/bigButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="176dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/headerCollectButton"
                android:background="@color/themePink"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/headerCollectIcon"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_coupon_get"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/headerCollectText"
                    android:layout_width="wrap_content"
                    android:textSize="23sp"
                    android:layout_marginTop="23dp"
                    android:textColor="@color/white"
                    android:text="티클모으기"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/headerChangeButton"
                android:background="@color/themeBlue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:alpha="0.5"
                    android:id="@+id/headerChangeIcon"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/icon_coupon_change"
                    android:layout_height="wrap_content" />
                <TextView
                    android:alpha="0.5"
                    android:id="@+id/headerChangeText"
                    android:layout_width="wrap_content"
                    android:textSize="23sp"
                    android:layout_marginTop="23dp"
                    android:textColor="@color/white"
                    android:text="티클바꾸기"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/headerSelectOval"
            android:layout_width="wrap_content"
            android:src="@drawable/selector_main_header_oval"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>