<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="@color/white"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/thumbnailView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:src="@mipmap/thumbnail" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grayBackground" />

        <TextView
            android:paddingLeft="4dp"
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="갈릭스테이크버거세트"
            android:textColor="@color/black33"
            android:textSize="11sp"
            android:textStyle="bold" />

        <LinearLayout
            android:paddingLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@mipmap/icon_coupon_get3" />

            <TextView
                android:id="@+id/quantityView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-2dp"
                android:singleLine="true"
                android:text="148,450"
                android:textColor="@color/themePink"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changeView"
            android:layout_marginRight="2dp"
            android:padding="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_changing" />

        <ImageView
            android:layout_marginRight="2dp"
            android:id="@+id/newView"
            android:padding="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_new" />

        <ImageView
            android:layout_marginRight="2dp"
            android:id="@+id/usedView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_used" />
    </LinearLayout>
</RelativeLayout>