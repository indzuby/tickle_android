<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="146dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@color/white"
        android:layout_height="138dp">
        <ImageView
            android:id="@+id/thumbnailView"
            android:layout_width="match_parent"
            android:src="@mipmap/thumbnail"
            android:scaleType="centerInside"
            android:layout_height="100dp" />
        <View
            android:layout_width="match_parent"
            android:background="@color/grayBackground"
            android:layout_height="0.5dp"/>
        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:textSize="11sp"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/black33"
            android:textStyle="bold"
            android:text="갈릭스테이크버거세트"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="12dp"
                android:src="@mipmap/icon_coupon_get3"
                android:layout_height="12dp" />
            <TextView
                android:id="@+id/quantityView"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="-2dp"
                android:singleLine="true"
                android:textColor="@color/themePink"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="148,450"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/changeView"
            android:layout_marginRight="2dp"
            android:padding="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_changing" />

        <ImageView
            android:layout_marginRight="2dp"
            android:id="@+id/newView"
            android:padding="1dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/icon_new" />

        <ImageView
            android:layout_marginRight="2dp"
            android:id="@+id/usedView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_used" />
    </LinearLayout>
</RelativeLayout>