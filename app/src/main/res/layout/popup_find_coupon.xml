<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:background="@color/black50" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/grayf4"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/black"
            android:paddingRight="10dp"
            android:layout_height="54dp">
            <EditText
                android:paddingLeft="8dp"
                android:textSize="14sp"
                android:background="@drawable/tickle_border"
                android:textColorHint="@color/gray99"
                android:textColor="@color/black33"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@+id/closeButton"
                android:hint="받고싶은 쿠폰 검색"
                android:layout_height="30dp" />
            <ImageView
                android:paddingLeft="10dp"
                android:id="@+id/closeButton"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:src="@mipmap/icon_close"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            app:tabSelectedTextColor="@color/themePink"
            app:tabIndicatorColor="@color/themePink"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            app:tabGravity="fill"
            app:tabTextColor="@color/black3b"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/viewPager"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
</FrameLayout>