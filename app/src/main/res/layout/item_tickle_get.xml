                android:src="@mipmap/icon_coupon_get2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="￦148,200"
                android:textColor="@color/themeBlue"
