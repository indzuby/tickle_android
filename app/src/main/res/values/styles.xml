<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="tab_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_toLeftOf">@+id/settingButton</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/change_border</item> <!-- 색상 및 이미지로 액션바 배경색 지정 -->
        <item name="android:elevation">@null</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>

        <item name="background">@drawable/change_border</item> <!-- 색상 및 이미지로 액션바 배경색 지정 -->
        <item name="elevation">@null</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
    </style>
    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
    </style>
</resources>
